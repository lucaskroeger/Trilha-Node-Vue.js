{
  "name": "frontend-vue",
  "version": "1.0.0",
  "description": "Frontend Vue.js para sistema de gerenciamento de estoque",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{js,vue,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,css,html}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuetify": "^3.3.15",
    "axios": "^1.5.0",
    "pinia": "^2.1.6",
    "@mdi/font": "^7.2.96",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "vite": "^4.4.9",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "@vue/test-utils": "^2.4.0",
    "jest": "^29.7.0",
    "@vue/vue3-jest": "^29.2.0",
    "jsdom": "^22.1.0"
  }
} 